@model EvironmentalMunicipality.Models.ServiceRequest

@{
    ViewData["Title"] = "Service Request Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Request ID</dt>
        <dd class="col-sm-9">@Model.RequestID</dd>

        <dt class="col-sm-3">Citizen ID</dt>
        <dd class="col-sm-9">@Model.CitizenID</dd>

        <dt class="col-sm-3">Service Type</dt>
        <dd class="col-sm-9">@Model.ServiceType</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Request Date</dt>
        <dd class="col-sm-9">@Model.RequestDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.RequestID" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>