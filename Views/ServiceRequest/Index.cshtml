@model IEnumerable<EvironmentalMunicipality.Models.ServiceRequest>

@{
    ViewData["Title"] = "Service Request Management";
    Layout = "_Layout";
}

<h2>Service Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Citizen ID</th>
            <th>Service Type</th>
            <th>Request Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RequestID</td>
                <td>@item.CitizenID</td>
                <td>@item.ServiceType</td>
                <td>@item.RequestDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.RequestID" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.RequestID" class="btn btn-info btn-sm">
                            <i class="bi bi-info-square"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.RequestID" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-info-square"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New</a>