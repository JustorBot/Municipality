@model EvironmentalMunicipality.Models.ServiceRequest

@{
    ViewData["Title"] = "Delete Service Request";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Request ID</dt>
        <dd class="col-sm-9">@Model.RequestID</dd>

        <dt class="col-sm-3">Service Type</dt>
        <dd class="col-sm-9">@Model.ServiceType</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Request Date</dt>
        <dd class="col-sm-9">@Model.RequestDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RequestID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>