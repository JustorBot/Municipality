@model EvironmentalMunicipality.Models.Report

@{
    ViewData["Title"] = "Create Report";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="CitizenID" class="form-label">Citizen *</label>
                    <select asp-for="CitizenID" class="form-control" required
                            asp-items="@(new SelectList(ViewBag.Citizens, "CitizenID", "FullName"))">
                        <option value="">-- Select Citizen --</option>
                    </select>
                    <span asp-validation-for="CitizenID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReportType" class="form-label">Report Type *</label>
                    <input asp-for="ReportType" class="form-control" required />
                    <span asp-validation-for="ReportType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Details" class="form-label">Details *</label>
                    <textarea asp-for="Details" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create Report</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}