@model EvironmentalMunicipality.Models.Report

@{
    ViewData["Title"] = "Report Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Report ID</dt>
        <dd class="col-sm-9">@Model.ReportID</dd>

        <dt class="col-sm-3">Citizen</dt>
        <dd class="col-sm-9">@Model.Citizen?.FullName (ID: @Model.CitizenID)</dd>

        <dt class="col-sm-3">Report Type</dt>
        <dd class="col-sm-9">@Model.ReportType</dd>

        <dt class="col-sm-3">Details</dt>
        <dd class="col-sm-9">@Model.Details</dd>

        <dt class="col-sm-3">Submission Date</dt>
        <dd class="col-sm-9">@Model.SubmissionDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.ReportID" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>